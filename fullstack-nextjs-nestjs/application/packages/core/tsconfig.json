{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
